<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="TEST_USER_CONTEXT" class="org.qamatic.mintleaf.oracle.OracleDbContext"
          primary="true">
        <constructor-arg>
            <bean class="org.apache.commons.dbcp2.BasicDataSource">
                <property name="url" value="#{TEST_USER_PROP.jdbcUrl}"/>
                <property name="username" value="#{TEST_USER_PROP.username}"/>
                <property name="password" value="#{TEST_USER_PROP.password}"/>
                <property name="validationQuery" value="Select 1 from dual"/>
                <property name="testOnBorrow" value="true"/>
                <property name="testOnReturn" value="true"/>
                <property name="accessToUnderlyingConnectionAllowed">
                    <value>true</value>
                </property>
            </bean>
        </constructor-arg>
        <property name="dbSettings" ref="TEST_USER_PROP"/>

    </bean>

    <bean id="TEST_USER_PROP" class="org.qamatic.mintleaf.core.DbConnectionProperties">
        <constructor-arg value="test.properties"/>
    </bean>

</beans>

